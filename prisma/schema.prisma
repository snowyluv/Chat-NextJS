generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id        String   @id @default(uuid())
  Username  String
  Password   String @unique
}

model Messages{
  id String @id @default(uuid())
  author_name String @unique
  content String
  createdAt DateTime @default(now())
}